# Deployment region
location = "centralus"

# Networking configuration
vnet_cidr           = "10.10.0.0/16"
public_subnet_cidr  = "10.10.1.0/24"
private_subnet_cidr = "10.10.2.0/24"
bastion_subnet_cidr = "10.10.3.0/26"

# VM configuration
vm_name        = "vm-secure-foundation-01"
vm_size        = "Standard_D2s_v4"
admin_username = "azureuser"

# SSH key path (update locally as needed)
ssh_public_key_path = "~/.ssh/tf_azure_baseline_rsa.pub"
